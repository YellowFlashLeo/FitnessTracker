<div class="dialog-container">
<div class="dialog">
    <div class="dialog-title">
        <h2>@TrainingExercise.Exercise.Name</h2>
    </div>
    <form class="dialog-body">
        <div>
            <label>Quantity:</label>
            <EditForm Model="TrainingExercise">
                <div class="form-group">
                    <InputNumber id="reps" @bind-Value="TrainingExercise.Exercise.Reps" class="form-control" />
                </div>
                <div class="form-group">
                    <InputNumber id="sets" @bind-Value="TrainingExercise.Exercise.Sets" class="form-control" />
                </div>
                <div class="form-group">
                    <InputNumber id="weight" @bind-Value="TrainingExercise.Exercise.Weight" class="form-control" />
                </div>
                <div class="form-group">
                    <InputNumber id="rpe" @bind-Value="TrainingExercise.Exercise.RPE" class="form-control" />
                </div>
            </EditForm>
        </div>
    </form>

    <div class="dialog-buttons">
        <button class="btn btn-secondary mr-auto" @onclick="OnCancel">Cancel</button>
        <button class="btn btn-success ml-auto" @onclick="OnConfirm">Order ></button>
    </div>
</div>
</div>

@code {
    [Parameter] public TrainingExercise TrainingExercise { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
}
